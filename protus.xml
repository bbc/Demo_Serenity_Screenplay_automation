        <serenity.cucumber.version>1.9.30</serenity.cucumber.version>
        <browserstack.local.version>1.0.1</browserstack.local.version>
        <groovy.version>2.2.1</groovy.version>
        <lambdaj.version>2.3.3</lambdaj.version>
