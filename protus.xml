        <jdbi.version>2.53</jdbi.version>
        <commons-dbcp2.version>2.0.1</commons-dbcp2.version>
        <stringtemplate.version>3.2.1</stringtemplate.version>
        <commons-configuration.version>1.10</commons-configuration.version>
        <commons-dbutils.version>1.6</commons-dbutils.version>
        <univocity-parsers.version>2.6.1</univocity-parsers.version>
        <spring-test.version>4.3.10.RELEASE</spring-test.version>
        <pedal-loader.version>1.0.2</pedal-loader.version>
        <sqljdbc4.version>4.0</sqljdbc4.version>
        <maven.checkstyle.plugin.version>2.17</maven.checkstyle.plugin.version>
        <encoding>UTF-8</encoding>
        <serenity.test.root></serenity.test.root>
        <parallel.tests>4</parallel.tests>
        <tags></tags>
    </properties>


    <dependencies>
        <dependency>
            <groupId>com.microsoft.sqlserver</groupId>
